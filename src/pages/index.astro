---
import MasterLayout from "@layouts/MasterLayout.astro";
---

<MasterLayout title="Welcome to my portfolio">
  <main
    class="flex flex-col items-center pt-8 px-4 sm:max-w-screen-xl sm:w-full sm:mx-auto md:flex-row md:justify-between md:px-16"
  >
    <div class="order-1 md:order-none">
      <div class="mb-4">
        <h1 class="text-4xl">Hi, I'm Software Engineer</h1>
        <span class="text-sm text-indigo-400">Ready to help</span>
      </div>
      <p>Your problem is my problem.</p>
      <button class="flex items-center p-4 my-4 rounded-3xl bg-green-700">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="currentColor"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-6 h-6"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z"
          ></path>
        </svg>
        <span class="ml-4">Call me</span>
      </button>
    </div>
    <div class="h-96 mb-16 md:mb-0">
      <img
        class="w-96 h-96 object-cover rounded-full"
        src="https://images.unsplash.com/photo-1581345331996-2496ba69a92e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=693&q=80"
        alt=""
      />
    </div>
  </main>
</MasterLayout>
